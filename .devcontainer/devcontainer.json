{
  "name": "Deno Development Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined"
  ],

  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "deno.enable": true,
        "deno.lint": true,
        "editor.formatOnSave": true
      },
      "extensions": [
        "denoland.vscode-deno"
      ]
    }
  },

  "forwardPorts": [],
  "postCreateCommand": "deno --version"
}
